<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/goalListChildItemPts"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:layout_marginEnd="3dp"
            android:text="pts"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/goalListChildItemComment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.487" />

        <TextView
            android:id="@+id/goalListChildItemComment"
            android:layout_width="252dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="Comment"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/goalListChildItemImage"
            app:layout_constraintTop_toBottomOf="@+id/goalListChildItemTitle" />

        <TextView
            android:id="@+id/goalListChildItemTitle"
            android:layout_width="201dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:text="Goal Title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/goalListChildItemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/goalListChildItemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/target" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>